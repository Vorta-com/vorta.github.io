
---
import { Container, Button } from '@components/odyssey-theme';
---

<Container>
    <section class="hero-section__section">
      <div class="hero-section__text">
        <slot></slot>
      </div>
    </section>
  </Container>
  
  <style>
    .hero-section__section {
      text-align: center;
      padding-top: 3rem;
      padding-bottom: 0; 
    }
  
    .hero-section__text h1 {
      font-size: 2.5rem;
      font-weight: bold;
      color: orangered;
    }

    .hero-section__text h2 {
      font-size: 5px;
      font-weight: bold;
      color: black;
    }
  
    p {
      font-size: 1.2rem;
      color: #555;
      margin-top: 1rem;
      margin-bottom: 0;
    }
  </style>
  